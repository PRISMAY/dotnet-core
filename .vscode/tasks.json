{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build dotnetcore-sample",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/dotnetcore-sample/dotnetcore-sample.csproj"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build dotnetcore-tests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/dotnetcore-tests/dotnetcore-tests.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}